{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "changelog-sections": [
    {
      "section": "🎉 Features",
      "type": "feat"
    },
    {
      "section": "🐛 Bug Fixes",
      "type": "fix"
    },
    {
      "section": "📝 Documentation",
      "type": "docs"
    },
    {
      "section": "💄 Styles",
      "type": "style"
    },
    {
      "section": "♻️ Code Refactoring",
      "type": "refactor"
    },
    {
      "section": "⚡ Performance Improvements",
      "type": "perf"
    },
    {
      "section": "✅ Tests",
      "type": "test"
    },
    {
      "section": "🏗️ Builds",
      "type": "build"
    },
    {
      "section": "🤖 Continuous Integrations",
      "type": "ci"
    },
    {
      "section": "🔧 Chores",
      "type": "chore"
    },
    {
      "section": "⏪ Reverts",
      "type": "revert"
    }
  ],
  "draft-pull-request": true,
  "include-v-in-tag": true,
  "packages": {
    "actions/plugins/publish/publish": {
      "package-name": "plugins-publish-publish",
      "extra-files": [
        ".github/workflows/cd.yml",
        ".github/workflows/ci.yml",
        ".github/workflows/playwright.yml",
        ".github/workflows/playwright-docker.yml",
        "examples/base/provisioned-plugins-auto-cd/publish.yaml",
        "examples/base/provisioned-plugins-auto-cd/push.yaml",
        "examples/base/provisioned-plugins-manual-deployment/publish.yaml",
        "examples/base/provisioned-plugins-manual-deployment/push.yaml",
        "examples/base/simple/publish.yaml",
        "examples/base/simple/push.yaml"
      ]
    },
    ".github/workflows": {
      "package-name": "ci-cd-workflows",
      "extra-files": [
        ".github/workflows/cd.yml",
        ".github/workflows/ci.yml",
        ".github/workflows/playwright.yml",
        ".github/workflows/playwright-docker.yml",
        "examples/base/provisioned-plugins-auto-cd/publish.yaml",
        "examples/base/provisioned-plugins-auto-cd/push.yaml",
        "examples/base/provisioned-plugins-manual-deployment/publish.yaml",
        "examples/base/provisioned-plugins-manual-deployment/push.yaml",
        "examples/base/simple/publish.yaml",
        "examples/base/simple/push.yaml"
      ]
    }
  },
  "release-type": "simple",
  "tag-separator": "/",
  "separate-pull-requests": true
}
